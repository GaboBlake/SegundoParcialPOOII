@model MarcaModel

@{
    ViewData["Title"] = "Alta de juguetes";
}

<div class="text-center">
    <h1 class="display-2"> Alta de juguetes</h1>
</div>

<div asp-validation-summary="All" class="Text-danger"></div>

<form asp-controller="Marca" asp-action="AddMarcas">
    <div class="mb-3">
        <label asp-for="Codigo" class="form-label">Código de la marcae  </label>
        <input type="text" class="form-control" asp-for="Codigo" placeholder="Escriba el código de la marca" />
    </div>
    <div class="mb-3">
        <label asp-for="Nombre" class="form-label">Nombre de la marca</label>
        <input type="text" class="form-control" asp-for="Nombre" placeholder="Escriba el nombre de la marca" />
    </div>

   <div class="mb-3">
        <label asp-for="Activo" class="form-label">Activo</label>
        <input type="text" class="form-control" asp-for="Activo" placeholder="Escriba si la marca está activa" />
    </div>


    <button type="submit" class="btn btn-primary">Guardar</button>

    <a asp-controller="Marca" asp-action="AddMarcas" class="btn btn-secundary mb-3"> Regresar </a>

</form>